# ============================================
# Market Insight AI Bot - Environment Variables
# ============================================

# ============ AI Services ============
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Get from: https://www.pinecone.io/
PINECONE_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
PINECONE_ENVIRONMENT=us-east-1-aws

# ============ Financial Data APIs ============
# Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=xxxxxxxxxxxxxxxx

# Get from: https://polygon.io/ (Optional)
POLYGON_API_KEY=xxxxxxxxxxxxxxxx

# Get from: https://finnhub.io/ (Optional)
FINNHUB_API_KEY=xxxxxxxxxxxxxxxx

# ============ Database Configuration ============
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/marketdb
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============ Redis Cache ============
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============ Security ============
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============ Application Settings ============
APP_ENV=production
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4

# Frontend URL (for CORS)
FRONTEND_URL=https://your-domain.com

# ============ Monitoring & Logging ============
# Get from: https://sentry.io/
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============ Email Notifications (Optional) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@marketinsight.ai

# ============ Cloud Storage (Optional) ============
# AWS S3 for storing reports/data
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=us-east-1
S3_BUCKET_NAME=market-insight-data

# ============ Celery Configuration ============
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============ News & Sentiment Analysis (Optional) ============
# Get from: https://newsapi.org/
NEWS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============ Feature Flags ============
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# ============ Development Settings ============
# Set to 'true' only in development
RELOAD_ON_CHANGE=false
ENABLE_SWAGGER_UI=true
